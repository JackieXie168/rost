prefix		= @prefix@
plugindir	= $(DESTDIR)$(prefix)/backend
srcdir  	= @srcdir@
top_srcdir  	= @top_srcdir@
CC		= @CC@
CFLAGS  	= @CFLAGS@
CPPFLAGS  	= @CPPFLAGS@ 
LIBS    	= @LIBS@ -L../lib -lrost -lsqlite3
INCLUDES 	= @INCLUDES@ -I. -I$(top_srcdir)/include -I$(top_srcdir)/lib

SHELL	= /bin/sh

SRC     =  auth.c quagga.c syslog.c linux-vlan.c linux-tunnel.c \
	   dns.c interface.c ntp.c snmp.c  system.c ethtool.c \
	   dhcp-client.c
OBJS    = $(SRC:.c=.o)
SHOBJS	= $(OBJS:.o=.so)

all:	 $(SHOBJS) 

.c.o:
	$(CC) $(CFLAGS) $(CPPFLAGS) $(INCLUDES) -c -rdynamic -fPIC $<

.o.so: 
	$(CC) $(LDFLAGS) -shared -o $@ -lc $< $(LIBS)

.SUFFIXES:
.SUFFIXES: .c .o .so


install: $(SHOBJS)
	install -d $(plugindir)
	install $^ $(plugindir)

uninstall:
	for i in $(SHOBJS); do \
	rm -f $(plugindir)/$$i; done

clean:
	rm -f $(OBJS) $(SHOBJS) *.core *.so *.o  # last to clean old unknown binaries

distclean: clean
	rm -f Makefile



